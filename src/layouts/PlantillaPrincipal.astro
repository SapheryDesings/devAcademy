---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css"
interface Props { titulopagina?: string; }
const { titulopagina } = Astro.props;
---
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/devAcademy/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<script type="module" src="/src/assets/header.js"></script>
		<meta name="generator" content={Astro.generator} />
		<title>devAcademy | { titulopagina }</title>
	</head>
	<body>
		<Header/>
			<section class="contenidoPrincipal">
				<slot/>
			</section>
		<Footer/>
	</body>
</html>